# Configurações da Vercel
NODE_ENV=production
PORT=3000

# Configurações do Banco de Dados PostgreSQL (Railway/Supabase)
DB_HOST=containers-us-west-XX.railway.app
DB_PORT=5432
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui

# Configurações JWT
JWT_SECRET=seu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=24h

# Configurações de Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações SSL para banco gerenciado
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# Configurações de Pool para Serverless
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
